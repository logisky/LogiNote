{
    "name": "loginote",
    "version": "1.0.2",
    "private": true,
    "workspaces": [
        "client",
        "server",
        "types"
    ],
    "main": "main.js",
    "type": "module",
    "build": {
        "appId": "com.loginote.app",
        "files": [
            "client/build/**/*",
            "node_modules/**/*",
            "server/dist/**/*",
            "server/package.json",
            "preload.cjs",
            "main.js",
            "package.json",
            "resources/dict/stardict.db",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ],
        "includeSubNodeModules": false
    },
    "scripts": {
        "prebuild": "cp resources/create_db.py.txt ECDICT/create_db.py && python3 ECDICT/create_db.py",
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces",
        "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron main.js",
        "electron-pack": "npm run build && electron-builder --dir",
        "postinstall": "npx electron-builder install-app-deps"
    },
    "dependencies": {
        "electron-is-dev": "^3.0.1",
        "electron-squirrel-startup": "^1.0.0",
        "electron-store": "^8.1.0",
        "form-data": "^4.0.0",
        "node-fetch": "^3.3.2",
        "simple-spellchecker": "^1.0.2",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.3.0",
        "@electron-forge/maker-deb": "^7.3.0",
        "@electron-forge/maker-rpm": "^7.3.0",
        "@electron-forge/maker-squirrel": "^7.3.0",
        "@electron-forge/maker-zip": "^7.3.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
        "@electron-forge/plugin-fuses": "^7.3.0",
        "@electron/fuses": "^1.7.0",
        "@types/jest": "^29.5.12",
        "electron": "29.1.4",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2"
    }
}